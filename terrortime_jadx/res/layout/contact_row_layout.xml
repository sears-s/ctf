<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/availability" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="12dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:src="@drawable/circle_grey" android:contentDescription="@string/availability" android:layout_alignParentStart="true"/>
    <TextView android:textSize="22sp" android:id="@+id/contact_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="@string/contact_name" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/availability"/>
    <ImageView android:id="@+id/new_message" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:src="@drawable/ic_message" android:contentDescription="@string/new_message" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="22sp" android:gravity="end" android:id="@+id/message_count" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="@string/message_count" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/new_message"/>
</RelativeLayout>
