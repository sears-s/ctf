<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/settings_form" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="@dimen/activity_title_size" android:id="@+id/client_settings_title" android:paddingBottom="@dimen/activity_title_bottom_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/client_settings_title"/>
    <EditText android:id="@+id/loginUserName_settings" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/prompt_jid" android:maxLines="1" android:singleLine="true" android:inputType="text"/>
    <EditText android:id="@+id/loginpin_settings" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/prompt_pin" android:maxLines="1" android:singleLine="true" android:inputType="textPassword"/>
    <EditText android:id="@+id/xmpp_server_ip_settings" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/prompt_XMPP_server_ip" android:maxLines="1" android:singleLine="true" android:inputType="text"/>
    <EditText android:id="@+id/oauth2_server_ip_settings" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/prompt_OAUTH2_server_ip" android:maxLines="1" android:singleLine="true" android:inputType="text"/>
    <EditText android:id="@+id/password_settings" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/prompt_password" android:maxLines="1" android:singleLine="true" android:inputType="textPassword" android:imeOptions="actionUnspecified" android:imeActionLabel="@string/action_register_short" android:imeActionId="6"/>
    <Button android:textStyle="bold" android:id="@+id/update_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/ok" style="?android:attr/textAppearanceSmall"/>
    <TextView android:textSize="15sp" android:id="@+id/clear_token" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/menu_clear_token" android:textIsSelectable="false" style="?android:attr/textAppearanceSmall"/>
    <RelativeLayout android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:id="@+id/progressBar3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true" style="?android:attr/progressBarStyleLarge"/>
    </RelativeLayout>
</LinearLayout>
